{
  "extends": "./playground/.nuxt/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/playground",
    "**/docs",
    "./packages/devtools/client"
  ]
}
